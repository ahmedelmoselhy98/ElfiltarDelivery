<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.elfiltar.elfiltartechnician.business.delivery.models.PackageModel" />
    </data>

    <LinearLayout
        android:id="@+id/section_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/background_stroke_rectangle_grey"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                setText="@{item.title}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الباقة العادية"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_selector"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_point"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                setText='@{""+item.subscription_period}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="يوم"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/section_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/background_solid_rectangle_grey_10a"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp">

            <TextView
                setText='@{""+item.price}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/public_currency_code"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

    </LinearLayout>
</layout>