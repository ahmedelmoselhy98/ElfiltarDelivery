<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الشمعة رقم"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/_16ssp" />

            <com.elfiltar.elfiltartechnician.commons.customcomponent.textview.DateTextView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:drawableEnd="@drawable/icon_calendar"
                android:drawablePadding="@dimen/_8sdp"
                android:background="@drawable/background_stroke_rectangle_grey"
                android:padding="@dimen/_10sdp"
                android:hint="@string/day"
                android:textAlignment="viewStart"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/text_color_grey" />
    </LinearLayout>
</layout>